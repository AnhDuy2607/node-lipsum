{
  "compilerOptions": {
    "declaration": true,
    "outDir": "lib",
    "target": "ES5",
    "module": "commonjs",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "removeComments": false,
    "noImplicitAny": true
  },
  "filesGlob": [
    "src/*.ts",
    "!./node_modules/**/*.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  },
  "files": [
    "src/cli.ts",
    "src/lipsum.ts",
    "src/parser.ts",
    "src/service.ts"
  ]
}
